@model List<Todo>
@{
    ViewData["Title"] = "EditTodo";
}

<h2>EditTodo</h2>

<form action="/edittodo" method="post">
    <div>
        <label for="name">Todo Description</label>
        <input type="text" id="name" name="name">
    </div>
    <div>
        <label for="name">Is it urgent?</label>
        <input id="isUrgent" name="isUrgent" type="checkbox" value="true" />
    </div>
    <div>
        <label for="name">Is it done?</label>
        <input id="isDone" name="isDone" type="checkbox" value="true" />
    </div>
    <div>
        <input type="submit" value="Submit" />
    </div>
</form>