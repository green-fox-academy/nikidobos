@model BankOfSimba.ViewModels.BankViewModel
@{
    ViewData["Title"] = "GetBankAccounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>GetBankAccounts</h2>

<body>
    <table style="padding:7px">
        <thead>
            <tr>
                <th>Name</th>
                <th>Balance</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody style="font-size: 16px">
            @{ for (int i = 0; i < @Model.accounts.Count; i++)
                {
                    {
                        <tr>
                            <td style="border:1px solid black; padding: 8px">@Model.accounts[i].Name</td>
                            <td style="border:1px solid black; padding: 8px">@Model.accounts[i].Balance</td>
                            <td style="border:1px solid black; padding: 8px">@Model.accounts[i].AnimalType</td>
                        </tr>

                    }
                }
            }
        </tbody>
    </table>
</body>
